<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddExerciseActivity">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/exercise_details_menu"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="459dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercise_details_menu">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="Сегодня"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/today"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:textColor="#000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="Неделя"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lastWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:textColor="#000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="Месяц"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lastMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:textColor="#000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="Квартал"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lastQuarter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:textColor="#000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="Год"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lastYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:textColor="#000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="91dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="За все время"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/allTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="---"
                android:textSize="20sp" />
        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>